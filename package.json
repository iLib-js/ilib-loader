{
    "name": "ilib-loader",
    "version": "1.3.0",
    "main": "./lib/index.js",
    "module": "./src/index.js",
    "description": "Loader to load text files in a cross-platform manner",
    "keywords": [
        "internationalization",
        "i18n",
        "localization",
        "l10n",
        "globalization",
        "g11n",
        "date",
        "time",
        "format",
        "locale",
        "translation",
        "loader"
    ],
    "homepage": "https://github.com/iLib-js/ilib-loader",
    "bugs": "https://github.com/iLib-js/ilib-loader/issues",
    "email": "marketing@translationcircle.com",
    "license": "Apache-2.0",
    "author": {
        "name": "Edwin Hoogerbeets",
        "web": "http://www.translationcircle.com/",
        "email": "edwin@translationcircle.com"
    },
    "contributors": [
        {
            "name": "Edwin Hoogerbeets",
            "email": "ehoogerbeets@gmail.com"
        }
    ],
    "files": [
        "src",
        "lib",
        "docs",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:iLib-js/ilib-loader.git"
    },
    "scripts": {
        "build": "npm run build:prod",
        "build:prod": "grunt babel --mode=prod",
        "build:dev": "grunt babel --mode=dev",
        "build:web": "webpack-cli",
        "build:test": "webpack-cli --config webpack-test.config.js",
        "dist": "npm-run-all doc build:prod build:web; npm pack",
        "test": "npm run test:cli",
        "test:cli": "LANG=en_US.UTF8 npm run build:dev ; node test/testSuite.js",
        "test:all": "npm-run-all test:cli test:web",
        "test:web": "LANG=en_US.UTF8 npm run build:test ; open-cli ./test/testSuite.html ; open-cli ./test/testSuite.html -- firefox",
        "debug": "npm run build:dev ; node --inspect-brk test/testSuite.js",
        "clean": "git clean -f -d * ; rm -rf lib",
        "doc": "mkdir -p docs ; jsdoc2md -c jsdoc.json --separators --source src/* -m table > docs/ilib-loader.md",
        "doc:html": "jsdoc -c jsdoc.json"
    },
    "dependencies": {
        "@log4js-node/log4js-api": "^1.0.2",
        "ilib-common": "^1.1.0",
        "ilib-env": "^1.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.18.5",
        "@babel/preset-env": "^7.18.2",
        "@babel/register": "^7.17.7",
        "@babel/runtime": "^7.18.3",
        "acorn": "^8.7.1",
        "acorn-jsx": "^5.3.2",
        "assertextras": "^1.1.0",
        "babel-loader": "^8.2.5",
        "babel-plugin-add-module-exports": "^1.0.4",
        "core-js": "^3.23.2",
        "docdash": "^1.2.0",
        "grunt": "^1.5.3",
        "grunt-babel": "^8.0.0",
        "grunt-cli": "^1.4.3",
        "grunt-contrib-clean": "^2.0.1",
        "grunt-contrib-jshint": "^3.2.0",
        "grunt-contrib-nodeunit": "^4.0.0",
        "grunt-contrib-uglify": "^5.2.2",
        "jsdoc": "^3.6.10",
        "jsdoc-to-markdown": "^7.1.1",
        "load-grunt-tasks": "^5.1.0",
        "nodeunit": "^0.11.3",
        "npm-run-all": "^4.1.5",
        "open-cli": "^7.0.1",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0"
    }
}
